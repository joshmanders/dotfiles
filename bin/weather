#! /usr/bin/env bash

function current() {
  curl -s wttr.in/"?0"
}

function day() {
  curl -s wttr.in/"?1"
}

function week() {
  curl -s wttr.in/"?3"
}

function main() {
  [[ "$1" == "--day" || "$1" == '-d' ]] && day && exit 0
  [[ "$1" == "--week" || "$1" == '-w' ]] && week && exit 0
  current
}

main "$@"
