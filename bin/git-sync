#! /usr/bin/env bash

function main () {
  local branch="${1-$(git branch | grep \* | cut -d ' ' -f2)}"
  local remote="${2-origin}"
  git fetch
  git checkout "${branch}"
  git pull "${2-origin}" "${branch}"
  git tidy
  if [[ $(git remote get-url upstream 2>&1) != *"fatal"* ]]; then
    git fetch upstream
    git rebase upstream/master
  fi
}

main "$@"
