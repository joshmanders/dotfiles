#!/usr/bin/env bash

_docker () {
  docker "${@}"
}

machine () {
  shift
  local args=("${@:1}")
  docker-machine "${args[@]}"
}

compose () {
  shift
  local args=("${@:1}")
  docker-compose "${args[@]}"
}

main () {
  local args=("$@")

  case "$1" in
    machine) machine "${args[@]}" ;;
    compose) compose "${args[@]}" ;;
    *) _docker "${args[@]}" ;;
  esac
}

main "$@"
