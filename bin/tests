#! /usr/bin/env bash

if [[ -e composer.json && $(cat composer.json | jq -r 'if .require."laravel/dusk" then true else false end') == "true" ]]; then
	exec php artisan dusk
fi

if [ -e vendor/bin/phpunit ]; then
  if [ $# ]; then
    exec phpunit --filter "$1"
  fi
  exec phpunit
fi

if [ -e package.json ]; then
  exec $(cat package.json | jq -r '.scripts.test')
fi

