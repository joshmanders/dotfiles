# All executable paths.
function paths () {
  echo ${PATH//:/\\n}
}

# Typing `edit .` is easier than anything else.
# But we want special conditions, such as our dotfiles.
function edit () {
  if [ $1 = "dotfiles" ]; then
    if [ $# -eq 2 ]; then
      $EDITOR "$DOTFILES/$2"
    else
      $EDITOR "$DOTFILES"
    fi
  else
    if [ $# -eq 2 ]; then
      $EDITOR "$1"
    else
      $EDITOR "."
    fi
  fi
}

# Boot Virtualbox machines by name from command line.
function startvm () {
  local vm="${1}"
  VBoxManage startvm "${vm}" --type headless # 2>&1 >/dev/null
}

# Stop Virtualbox machines by name from command line.
function stopvm () {
  local vm="${1}"
  VBoxManage controlvm "${vm}" poweroff # 2>&1 >/dev/null
}
